<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN" "http://www.w3.org/TR/html4/strict.dtd">
<html>
    <head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
        <title>Blog</title>
        <%= stylesheet_link_tag 'reset-min', 'screen', 'coderay' %>
        <%= javascript_include_tag  'plugins/jquery', 'plugins/jquery.easing.1.3', 'application' %>
    </head>

    <body id="<%= controller.controller_name %>">
			<div id="wraper">
				<div id="header">
					<div id="logo"><h1><a href="/">rociiu</a></h1></div>
					<div id="menu">
						<ul>
							<li><a href="/">Home</a></li>
							<li><a href="/blog">Blog</a></li>
							<li><a href="/resume">Resume</a></li>
							<li><a href="/contact">Contact me</a></li>
						</ul>
						<div class="clear"></div>
					</div>
					<div class="clear"></div>
				</div>
	  	  <div id="mainContent">
					<% if logged_in? %>
						<div id="tools">
							<%= link_to 'New Post', new_post_path %>
							<%= link_to 'Logout', logout_path %>
						</div>
					<% end %>
					<% if flash[:notice] %>
						<div id="notice">
							<%= flash[:notice] %>
						</div>
					<% end %>
	  	  	<%= yield %>
	  	  </div>	
			</div>
		
    </body>

</html>
